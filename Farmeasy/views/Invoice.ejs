                <td>$0000</td>
            </tr>
        </table>
    </div>
    <script>
        const InvoiceID = Math.floor(Math.random() * (999 - 100)) + 100;
        const landOwnerName = localStorage.getItem("LON");
        const landOwnerSurname = localStorage.getItem("LOS");
        const Email = localStorage.getItem("EMAIL");
        const phoneNumber = localStorage.getItem("PN");
        const altPhoneNumber = localStorage.getItem("APN");
        const dateOfBooking = localStorage.getItem("DOB");
        const Add_flatno = localStorage.getItem("FLTNO");
        const Add_StreetName = localStorage.getItem("SN");
        const Add_Landmark = localStorage.getItem("LM");
        const Add_City= localStorage.getItem("CITY");
        const Add_State = localStorage.getItem("STATE");
        const Add_Pincode  = localStorage.getItem("PINCODE");
        const LandArea = localStorage.getItem("LANDAREA");
        const CropPref1 = localStorage.getItem("CROPPREF1");
        const CropPref2 = localStorage.getItem("CROPPREF2");

        
        window.onload = () => {
            document.getElementById('InvoiceID').innerHTML = InvoiceID
            document.getElementById('LON').innerHTML = landOwnerName
            document.getElementById('LOS').innerHTML = landOwnerSurname
            document.getElementById('EMAIL').innerHTML = Email
            document.getElementById('PN').innerHTML = phoneNumber
            document.getElementById('APN').innerHTML = altPhoneNumber
            document.getElementById('DOB').innerHTML = dateOfBooking
            document.getElementById('FLTNO').innerHTML = Add_flatno
            document.getElementById('SN').innerHTML = Add_StreetName
            document.getElementById('LM').innerHTML = Add_Landmark
            document.getElementById('CITY').innerHTML = Add_City
            document.getElementById('STATE').innerHTML = Add_State
            document.getElementById('PINCODE').innerHTML = Add_Pincode
            document.getElementById('LANDAREA').innerHTML = LandArea
            document.getElementById('CROPPREF1').innerHTML = CropPref1
            document.getElementById('CROPPREF2').innerHTML = CropPref2
        
    }
