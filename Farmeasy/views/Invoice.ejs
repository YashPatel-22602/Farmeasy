                            <td>
                                <span id="LON"></span>
                                <span id="LOS"></span>
                            </td>
                        </tr>
                    </table>
                    <!-- End of Table -->
                </td>
            </tr>

            <tr class="informatiion">
                <td colspan="2">
                    <!-- inner table start here -->
                    <table>
                        <tr>
                            <td>
                                jnejcn,inec <br>
                                Phone: 9494839544 <br>
                            </td>

                            <td>
                                scsc <br>
                                affcea <br>
                                Email: infeuwbue@gmail.com
                            </td>

                        </tr>
                    </table>
                    <!-- inner table ends -->
                </td>
            </tr>
            
            <tr class="heading">
                <td>
                    Payment Method
